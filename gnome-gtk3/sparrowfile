say tags().perl;

directory "scm";

if  tags()<SCM_URL> {

  git-scm tags()<SCM_URL>, %(
    to => "scm",
    branch => tags<SCM_BRANCH>
  );

} else {

  git-scm "https://github.com/MARTIMM/gnome-gtk3.git", %(
    to => "scm",
    branch => "master"
  );

}

bash "git log --name-status HEAD^..HEAD", %(
  cwd => "{%*ENV<PWD>}/scm"
);

bash "zef --depsonly install .", %(
  cwd => "{%*ENV<PWD>}/scm"
);

bash "zef test .", %(
  cwd => "{%*ENV<PWD>}/scm"
);


