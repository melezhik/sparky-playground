say tags().perl;

directory "scm";

zef "IO::Socket::SSL", ( notest => True ); 

if  tags()<SCM_URL> {

  git-scm tags()<SCM_URL>, %(
    to => "scm",
    branch => tags<SCM_BRANCH>
  );

} else {

  git-scm "https://github.com/raku-community-modules/LWP-Simple.git", %(
    to => "scm",
    branch => "master"
  );

}

bash "git log --name-status HEAD^..HEAD", %(
  cwd => "{%*ENV<PWD>}/scm"
);

bash "zef install . --force-install", %(
  cwd => "{%*ENV<PWD>}/scm"
);
