say tags().perl;

if  tags()<SCM_URL> {

  git-scm tags()<SCM_URL>, %(
    to => "{%*ENV<HOME>}/.sparky/projects",
    branch => tags<SCM_BRANCH>
  );

} else {

  git-scm "https://github.com/melezhik/sparky-playground.git", %(
    to => "{%*ENV<HOME>}/.sparky/projects",
    branch => "main"
  );

}

